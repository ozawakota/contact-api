# Contact API フロントエンド環境設定

# バックエンドAPI URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# Firebase 設定
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key-here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abcdef123456

# Firebase Admin SDK（サーバーサイド用）
FIREBASE_ADMIN_SDK_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_ADMIN_SDK_CLIENT_EMAIL=firebase-adminsdk-xxx@your-project.iam.gserviceaccount.com

# 管理者権限設定
NEXT_PUBLIC_ADMIN_DOMAIN=your-company.com  # Google OAuth ドメイン制限（オプション）
NEXT_PUBLIC_DEV_ADMIN_EMAILS=admin@example.com,dev@example.com  # 開発環境用管理者メール

# アプリケーション設定
NEXT_PUBLIC_APP_NAME=Contact API
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_SUPPORT_EMAIL=support@example.com

# 機能フラグ
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# セキュリティ設定
NEXTAUTH_SECRET=your-nextauth-secret-here  # 32文字以上のランダム文字列
NEXTAUTH_URL=http://localhost:3000

# reCAPTCHA（オプション）
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# 外部サービス連携（オプション）
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
SENDGRID_API_KEY=your-sendgrid-api-key

# 開発環境設定
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1  # Next.js テレメトリー無効化